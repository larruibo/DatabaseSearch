<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-12">
          <div class="col-12">
            <h1><%= title %></h1>
            <p>Welcome to <%= title %></p>
            <form id="algoForm" action="algo/create" method="POST">
              <div class="form-group">
                <label for="dataBase">Select your DataBase:</label>
                <select name="dataBase" id="dataBase-select">
                  <% dataBases.forEach( (dataBase) => { %>
                    <option value="<%= dataBase.name %>"><%= dataBase.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="collection">Select your Collection:</label>
                <select name="collection" id="collection-select">
                    <option value="" selected>--</option>
                  <% collections.forEach( (collection) => { %>
                    <option value="<%= collection.name %>"><%= collection.name %></option>
                  <% }) %>
                </select>
              </div>
            </form>
          </div>
          <div class="col-12" id="create">
            <form id="createForm" class="" action="" method="POST">

            </form>
          </div>
        </div>
        <div class="col-md-6 col-12">
          <h1>Info</h1>
          <div class="row" id="info">

          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/javascripts/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
